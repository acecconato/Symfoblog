{% extends 'layout.html.twig' %}

{% block page_content %}
    <article class="text-center pb-5">
        <div class="position-relative">
            {% if post.image %}
                <img class="img-fluid post__image"
                     src="{{ post.image }}"
                     alt="Image de l'article {{ post.title }}">
            {% endif %}

            <h1 class="post__title bg-dark shadow text-white {% if not post.image %}noimage{% endif %}">{{ post.title }}</h1>
        </div>

        <div class="row mt-5">

            <div class="col-10 mx-auto d-flex justify-content-between align-items-center my-3">
                <p>
                    <img class="img-thumbnail rounded-5" width="60" height="60"
                         src="{{ post.author.profile.avatar }}"
                         alt="Avatar de {{ post.author.username }}">
                    <span class="mx-2">{{ post.author.username }}</span></p>
                <p class="d-flex align-items-center"><i class="fa fa-2x fa-clock-o  mx-2"></i> {{ post.updatedAt|ago }}
                </p>
            </div>

            <div class="col-10 mx-auto mt-3">
                <p>{{ post.content }}</p>
            </div>
        </div>
    </article>
{% endblock %}
