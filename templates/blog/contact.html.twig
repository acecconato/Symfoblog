{% extends 'layout.html.twig' %}

{% block page_content %}
    <h1>Contactez-nous</h1>
    {{ form_start(form, {attr: {class: 'mt-5'}}) }}

    <div class="row mb-3">
        {{ form_row(form.fullname, {row_attr: {class: 'col'}, attr: {class: 'rounded-0'}}) }}
        {{ form_row(form.email, {row_attr: {class: 'col'}, attr: {class: 'rounded-0'}}) }}
    </div>

    {{ form_row(form.subject, {attr: {class: 'rounded-0'}}) }}

    {{ form_row(form.message, {attr: {class: 'rounded-0', 'rows': 10}}) }}

    {{ form_row(form.submit, {attr: {class: 'btn btn-dark text-white rounded-0 px-4 py-2'}}) }}

    {{ form_end(form) }}
{% endblock %}
